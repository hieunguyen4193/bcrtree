    ln -s /home/hieu/src/BCRTree_release/gctree/work/ff/0efc0211d87134233566958df42a3e/gctree.out.inference.1.fasta gctree.out.inference.1.fasta
    ln -s /home/hieu/src/BCRTree_release/gctree/work/ff/0efc0211d87134233566958df42a3e/gctree.out.inference.1.nk gctree.out.inference.1.nk
    ln -s /home/hieu/src/BCRTree_release/gctree/work/ff/0efc0211d87134233566958df42a3e/gctree.out.inference.1.p gctree.out.inference.1.p
